<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoky_black"
    tools:context=".ContFot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="@string/fotSoliName"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="159dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|center_vertical"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="@string/fotSolidata"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="306dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/fotSoliLocal"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="305dp"
            android:layout_height="232dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button2"
            android:layout_width="138dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_button_white"
            android:text="@string/fotSolibtnSolicitar"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>