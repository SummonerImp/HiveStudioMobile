<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#291A14"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="327dp"
            android:layout_height="376dp"
            android:layout_gravity="center"
            android:contentDescription="Logo"
            app:srcCompat="@mipmap/hivestudio_logo" />

        <EditText
            android:id="@+id/mainTxtUser"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/radius_textview"
            android:ems="10"
            android:hint="@string/mainTxtUser"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mainTxtPasword"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_textview"
            android:ems="10"
            android:hint="@string/mainTxtPassword"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mainChkRemindMe"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/background_light"
                android:buttonTint="@android:color/background_light"
                android:text="@string/mainCkbRemindMe"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mainLblForgotPassword"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="@string/mainLblForgotPassword"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/mainBtnLogin"
            android:layout_width="199dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_button_white"
            android:onClick="onLoginPress"
            android:text="@string/mainBtnSignIn" />

        <TextView
            android:id="@+id/mainLblSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/mainLblSignUp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>